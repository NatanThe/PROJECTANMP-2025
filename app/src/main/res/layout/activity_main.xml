<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <!-- Bagian konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Pengukuran Anak"
            android:textSize="20sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#DAD2FF"
            android:textStyle="bold"/>

        <!-- Tempat fragment ditampilkan -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

    </LinearLayout>

    <!-- Drawer di sisi kiri -->
    <LinearLayout
        android:id="@+id/drawer_menu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#ECE6F0"
        android:padding="20dp">

        <TextView
            android:id="@+id/menuUkur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukur Berat Badan dan Tinggi"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />

        <TextView
            android:id="@+id/menuData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Berat Badan dan Tinggi"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />

        <TextView
            android:id="@+id/menuProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil Anak"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
